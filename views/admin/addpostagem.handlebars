<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <h4>Nova Postagem</h4>
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descricao:</label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria" class="mt-3">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-3">Criar Postagem</button>
        </form>
    </div>
</div>